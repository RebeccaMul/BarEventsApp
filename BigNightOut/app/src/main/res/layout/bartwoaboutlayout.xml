<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.administrator.bignightout.BarTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tab header with navigation (needed on all 3 pages) -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="com.example.Administrator.menu.BarsMenu"
            android:columnCount="4"
            android:rowCount="1"
            android:useDefaultMargins="true"
            android:layout_marginLeft="0dp"
            android:background="#3f51b5"
            >

            <Button
                android:id="@+id/aboutbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="About"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="AboutRedirect"
                android:height="80dp"
                android:width="50dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/info"
                android:layout_marginLeft="0dp"
                />

            <Button
                android:id="@+id/mapbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Map"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="MapsRedirect"
                android:height="80dp"
                android:width="50dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/map"
                android:layout_marginLeft="0dp"
                />

            <Button
                android:id="@+id/commentbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Comment"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:layout_column="2"
                android:onClick="CommentsRedirect"
                android:height="80dp"
                android:width="100dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/comment"
                android:layout_marginLeft="0dp"
                />

            <Button
                android:id="@+id/backbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Menu"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="MainMenuRedirect"
                android:height="80dp"
                android:width="50dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/menu"
                android:layout_marginLeft="0dp"

                />

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bar2name"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <ImageView
            android:id="@+id/firstimage"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/limelight"

            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>


        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bar2desc"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            >

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/fb"
                android:onClick="fbClick"

                />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginLeft="12dp"
                android:onClick="twitClick"


                />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/insta"
                android:layout_marginLeft="12dp"
                android:onClick="instaClick"

                />
        </GridLayout>

    </LinearLayout>
</RelativeLayout>


