<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:screenOrientation="portrait"
    tools:context="com.example.administrator.bignightout.NightClubTwoLeaveComment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tab header with navigation (needed on all 3 pages) -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="com.example.Administrator.menu.NightclubMenu"
            android:columnCount="3"
            android:rowCount="1"
            android:useDefaultMargins="true"
            android:layout_marginLeft="0dp"
            android:background="#3f51b5"
            >

            <Button
                android:id="@+id/aboutbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="About"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="AboutRedirect"
                android:height="80dp"
                android:width="125dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/info"
                />

            <Button
                android:id="@+id/mapbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Maps"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="MapsRedirect"
                android:height="80dp"
                android:width="125dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/map"
                android:layout_marginLeft="0dp"
                />

            <Button
                android:id="@+id/commentbtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Comment"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:layout_column="2"
                android:onClick="CommentsRedirect"
                android:height="80dp"
                android:width="105dp"
                android:background="#3f51b5"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:drawableBottom="@drawable/comment"
                android:layout_marginLeft="0dp"
                />

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave us a comment!"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="#000000"/>

        <TextView
            android:id="@+id/removephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="120dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:visibility="invisible"
            android:onClick="RemovePhoto"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/addphoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cameraicon"
                android:background="#e8e5e4"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="80dp"
                />

            <TextView
                android:id="@+id/photomessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a photo"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"
                android:background="#000000"
                />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>



        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:height="20dp"
            android:background="#FFF"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Name"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/commentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/detailText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFF"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="@string/commentHint"
            android:gravity="top"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>


        <Button
            android:id="@+id/leavecommentbtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit your Comment"
            android:height="60dp"
            android:background="#000"
            android:textColor="#FFF"
            android:onClick="submit"
            android:textSize="20dp"

            />

    </LinearLayout>


</RelativeLayout>